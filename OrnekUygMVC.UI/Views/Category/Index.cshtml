@model ICollection<OrnekUyg.Model.Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <div class="row">
            <form action="/Category/Index" method="post" class="form-group">
                <div class="col-md-12">
                    Kategori Adı :  <input type="text" name="CategoryName" value="" />
                    <br />
                    <input type="submit" name="name" value="Kaydet" />
                </div>
            </form>
        </div>
        <br />
        <hr />
        <br />
        <div class="row">
            <div class="col-md-12">
                <table>
                    @foreach (OrnekUyg.Model.Category item in Model)
                    {

                        <tr>
                            <td>@item.CategoryName</td>
                            <td><a href="@Url.Action("Update","Category",new { categoryID=item.CategoryID })" class=" btn btn-info">Güncelle</a></td>
                            <td><a href="@Url.Action("Delete","Category",new { categoryID = item.CategoryID })" class="btn btn-danger">Sil</a></td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </div>
